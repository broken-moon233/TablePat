<Window x:Class="TablePet.Win.Chat.ChatInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TablePet.Win.Chat"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"  AllowsTransparency="True" Background="Transparent" WindowStyle="None" 
        Title="ChatInput" Width="500" MouseMove="ChatWin_MouseMove">
    <StackPanel>
        <RichTextBox Name="rtb_Out" Margin="5" Padding="10,30,10,10" MinHeight="100" MaxHeight="500" Width="490"
                     IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto" FontSize="13"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
            <TextBox Name="tb_In" DockPanel.Dock="Bottom" Height="30" Width="440" 
                     Margin="5" FontSize="13" Padding="10,0,10,0" VerticalContentAlignment="Center"/>
            <Button Name="bt_In" DockPanel.Dock="Right" Height="30" Width="45" Margin="0,5,5,5" 
                    Content="输入" FontSize="13" Click="bt_In_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
