<Window x:Name="mainWin" x:Class="TablePat_Win.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TablePat_Win"
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="250"
        WindowStyle="None" ResizeMode="NoResize" 
        Background="Transparent" AllowsTransparency="True" 
        MouseMove="mainWin_MouseMove" MouseLeftButtonUp="mainWin_MouseLeftButtonUp">
    <Grid>
        <Image x:Name="pet" Visibility="Visible" Height="250" Width="250" Stretch="Uniform"
               gif:AnimationBehavior.SourceUri="pack://application:,,,/Resources/relax.gif"
               gif:AnimationBehavior.RepeatBehavior="Forever"
               gif:AnimationBehavior.CacheFramesInMemory = "False" 
               PreviewMouseLeftButtonDown="pet_PreviewMouseLeftButtonDown"/>
    </Grid>
</Window>
